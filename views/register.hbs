
<div class="row justify-content-center" >
    <div class="col-md-6">
        <h1>Register</h1>
        <form action="/auth/register" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <input name="userName" placeholder="Ingrese nombre" class="form-control mb-2" type="text">
            <input name="email" placeholder="Ingrese email" class="form-control mb-2" type="text">
            <input name="password" placeholder="Ingrese password" class="form-control mb-2" type="password">
            <input name="repassword" placeholder="Reingrese password" class="form-control mb-2" type="password">
        <button class="btn btn-primary" type="submit">Registrar Usuario</button>
        </form>
    </div>
</div>
