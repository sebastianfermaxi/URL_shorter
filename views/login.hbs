<div class="row justify-content-center">
    <div class="col-md-6">
        <h1>Login Usuario</h1>
        <form action="/auth/login" method="post">
            <input type="hidden" name="_csrf" value="{{csrfToken}}" />
            <input name="email" placeholder="Ingrese email" class="form-control mb-2" type="text" ">
            <input name="password" placeholder="Ingrese password" class="form-control mb-2" type="password" ">
            <button class="btn btn-primary" type="submit">Acceder</button>
        </form>
    </div>
</div>